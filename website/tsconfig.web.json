{
	"compilerOptions": {
		"target": "esnext",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"strict": true,
		"outDir": "dist",
		"skipLibCheck": true,
		"rootDir": "./src",
		"resolveJsonModule": true,
		"newLine": "LF",
		"sourceMap": true,
		"jsx": "react",
		"experimentalDecorators": true,
		"useDefineForClassFields": false,
		"noEmit": true
	},
	"include": ["src/**/*", "./node_modules/monaco-editor/monaco.d.ts"]
}
